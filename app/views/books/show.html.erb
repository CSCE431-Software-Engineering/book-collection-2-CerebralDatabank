<% flash.each do |type, msg| %>
  <div class="flash flash-<%= type %>"><%= msg %></div>
<% end %>

<%= link_to("Back to List", books_path, class: 'back-link') %>

<div class="books show">
  <h2>Show Book</h2>

  <p>Title: <%= @book.title %></p>
  <p>Author: <%= @book.author %></p>
  <p>Price: <%= number_with_precision(@book.price, precision: 2) %></p>
  <p>Published Date: <%= @book.pub_date %></p>

  <div class="actions">
    <%= link_to('Edit', edit_book_path(@book)) %>
    <%= link_to('Delete', delete_book_path(@book)) %>
  </div>

</div>